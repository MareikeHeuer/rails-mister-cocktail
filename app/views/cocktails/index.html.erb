<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-4">
        <div class="card  m-2 m-lg-4">
          <img src="https://images.unsplash.com/photo-1526424382096-74a93e105682?ixlib=rb-1.2.1&auto=format&fit=crop&w=2434&q=80" class="card-img-top" alt="...">
          <div class="card-body">
            <p class="card-text">
              <%= cocktail.name %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



